{
  "extends": "@penx/typescript-config/base.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "lib": ["ESNext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext"
  },
  "include": ["./**/*.ts", "./**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
