{
  "name": "node-fn-listener",
  "version": "1.0.0",
  "description": "Global fn key listener for Node.js and Electron applications, based on Loop project",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "node-gyp rebuild",
    "build:debug": "node-gyp rebuild --debug",
    "build:electron": "node scripts/electron-rebuild.js",
    "test": "node tests/test.js",
    "test:advanced": "node tests/advanced-test.js",
    "test:callback": "node tests/callback-test.js",
    "test:detailed": "node tests/detailed-test.js",
    "test:all": "npm run test && npm run test:advanced",
    "example": "node examples/example.js",
    "example:electron": "electron examples/electron-example.js",
    "install": "node-gyp rebuild",
    "clean": "rm -rf build bin target",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "author": "Loop Team",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^24.2.0",
    "nan": "^2.18.0",
    "node-gyp": "^10.0.1",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "keywords": [
    "fn-key",
    "global-listener",
    "electron",
    "keyboard",
    "macos",
    "swift",
    "loop",
    "accessibility",
    "keyboard-events"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LoopTeam/node-fn-listener.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "os": [
    "darwin"
  ],
  "files": [
    "index.js",
    "index.d.ts",
    "lib/",
    "build/Release/node_fn_listener.node",
    "build/Release/libfn_listener.a",
    "README.md"
  ],
  "directories": {
    "lib": "lib",
    "tests": "tests",
    "examples": "examples",
    "docs": "docs"
  },
  "bugs": {
    "url": "https://github.com/LoopTeam/node-fn-listener/issues"
  },
  "homepage": "https://github.com/LoopTeam/node-fn-listener#readme"
}